{
  "name": "increment-calver-action",
  "private": true,
  "description": "GitHub Action that increments a CalVer version based on the current latest release",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build ./src/main.ts",
    "start": "npx ncc run ./src/main.ts",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onward-partners/increment-calver-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "version"
  ],
  "author": "onward-partners",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "calver": "^24.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-plugin-github": "^6.0.0",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
